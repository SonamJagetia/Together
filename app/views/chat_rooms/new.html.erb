<% if current_user && current_user.is_admin? %>
  <h1>Add chat room</h1>

  <%= form_for @chat_room do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: 'form-control', id: "chatroom_title" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, autofocus: true, class: 'form-control', id: "chatroom_description" %>
    </div>

    <%= f.submit "Add!", class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <% controller.redirect_to root_path %>
<% end %>
